@using OpenAI.GPT3.ObjectModels.RequestModels
@using Markdig
@using Markdig.Renderers
@using Markdig.Extensions.Tables
@using Markdig.Extensions.AutoLinks
@inject StatusAppClient StatusAppClient
@inject DataState DataState
@inject SswRulesGptDialogService SswRulesGptDialogService
@inject ApiKeyValidationService ApiKeyValidationService
@inject NotifierService NotifierService
@inject SignalRClient SignalR
@inject IJSRuntime Js
@inject ISnackbar Snackbar

<style>
    .markdown-body p:last-child,
    .markdown-body ol:last-child,
    .markdown-body ol:last-child {
        margin-bottom: 0 !important;
    }
    
    a {
        color: #CC4141 !important;
    }
    
    table {
        border-spacing: 0px;
    }
    
    th {
        display: table-cell;
        border-width: 1px;
        padding: 8px;
    }
    
    td {
        display: table-cell;
        border-width: 1px;
        padding: 8px;
    }

    .chat-box {
        max-width: 70%;
    }
    
    .mud-typography {
        line-height: 1.8
    }
    
    @@media screen and (max-width: 600px) {
        .chat-box {
            max-width: 85%;
        }
    }
</style>

